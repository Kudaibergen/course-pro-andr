<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAD7D7"
    tools:context=".MainActivity">

    <com.kay.progayim.customview.LoanPaymentStateView
        android:id="@+id/loan_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingVertical="20dp"
        android:background="@color/white"
        app:lpsvPaymentDateText="Оплатить до 24 января"
        app:lpsvPaymentAmountText="38 000 c"
        app:lpsvPaymentButtonText="Оплатить"
        app:lpsvPaymentText="@string/common.credit.enoughFunds"
        app:lpsvPaymentStatus="expired"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>