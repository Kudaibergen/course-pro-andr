<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProgAyimApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTextView" parent="android:Widget.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_14dp</item>
    </style>

    <style name="BlackPrimaryTextView" parent="BaseTextView">
        <item name="android:textColor">@color/ui_color_text_primary</item>
        <item name="android:textColorHint">@color/ui_color_text_secondary</item>
    </style>

    <style name="BlackPrimaryTextView.14dp">
        <item name="android:textSize">@dimen/font_size_14dp</item>
    </style>

    <style name="BlackPrimaryTextView.16dp">
        <item name="android:textSize">@dimen/font_size_16dp</item>
    </style>

    <style name="BlackPrimaryTextView.24dp">
        <item name="android:textSize">@dimen/font_size_24dp</item>
    </style>

    <style name="GreenTextView" parent="BaseTextView">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/ui_color_text_green</item>
    </style>

    <style name="GreenTextView.14dp">
        <item name="android:textSize">@dimen/font_size_14dp</item>
    </style>

    <style name="UIBaseButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="UIRedButton" parent="UIBaseButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/bg_selector_ripple_red_corners</item>
        <item name="android:textColor">@color/ui_color_text_white_primary</item>
    </style>

    <style name="UIRedButton.14dp">
        <item name="android:textSize">@dimen/font_size_14dp</item>
    </style>

</resources>